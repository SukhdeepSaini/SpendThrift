<!DOCTYPE html>
<html ng-app="spendThrift">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/cosmo.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/2015.1.318/kendo.blueopal.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular-resource.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
    @*<script src="~/Scripts/kendo/2015.1.318/kendo.ui.core.min.js"></script>
    <script src="~/Scripts/kendo/2015.1.318/kendo.datetimepicker.min.js"></script>*@
    <script src="~/Scripts/d3.min.js"></script>
    <script src="~/Scripts/angular-charts.min.js"></script>
    <script src="~/Scripts/app/spendthriftModule.js"></script>
    <script src="~/Scripts/home/home-controller.js"></script>
    <script src="~/Scripts/app/login-controller.js"></script>
    <script src="~/Scripts/app/login-repository.js"></script>
    <script src="~/Scripts/Account/account-controller.js"></script>
    <script src="~/Scripts/Account/account-repository.js"></script>
    <script src="~/Scripts/UserProfile/profile-controller.js"></script>
    <script src="~/Scripts/UserProfile/profile-repository.js"></script>
    <script src="~/Scripts/EbaySearch/ebay-controller.js"></script>
    <script src="~/Scripts/EbaySearch/ebay-repository.js"></script>
    <script src="~/Scripts/DashBoard/dashboard-controller.js"></script>
    <script src="~/Scripts/Contact/contact-controller.js"></script>
    <script src="~/Scripts/Contact/contact-repository.js"></script>
    <script src="http://maps.googleapis.com/maps/api/js"></script>
    <script src="~/Scripts/LocationMaps/locationMaps-controller.js"></script>
</head>
<body>
    <main class="container">
        <div class="row">
            <div class="navbar navbar-default">
                <div class="navbar-header">
                    <ul class="nav navbar-nav">
                        <li><span class="navbar-brand"><a href="/#/Home">Home</a></span></li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="/#/EbaySearch">Online Products</a></li>
                        <li><a href="/Store">Store</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a data-toggle="modal" data-target="#loginModal">Login</a></li>
                        <li><a href="/#/Profile">Profile</a></li>
                        <li><a href="/#/Account/Create">Create Account</a></li>
                        <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
                        <li><a href="/#/Dashboard">Admin Dashboard</a></li>
                        <li><a href="/#/Contact">Contact</a></li>
                        <li><a href="/#/FindUs">Find US</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div ng-view></div>
        @RenderBody()
    </main>
    <form ng-controller="loginCtrl" name="loginForm" novalidate>
            <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="LoginModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <h3 class="modal-title text-primary" id="LoginModalLabel">Login</h3>
                        </div>
                        <div class="modal-body">
                            <div class="container">
                                <div class="row">
                                    <div class="col-xs-4 col-xs-offset-1 form-group">
                                        <label class="text-primary">User Name</label>
                                        <input type="text" placeholder="UserName" name="username" class="form-control" id="username" ng-model="customer.username" required>
                                        <div class="text-danger" ng-show="loginForm.username.$error.required && loginForm.username.$dirty">Please Enter User Name</div>
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col-xs-4 col-xs-offset-1 form-group">
                                        <label class="label-control text-primary">Password</label>
                                        <input type="password" name="password" placeholder="Password" class="form-control" id="password" ng-model="customer.password" required>
                                        <div class="text-danger" ng-show="loginForm.password.$error.required && loginForm.password.$dirty">Please Enter Password</div>
                                    </div>
                                </div>
                                <div class="text-danger col-md-4" ng-show="error">UserName And Password Does not match</div>
                            </div>
                            <br>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary" id="loginBtn" ng-disabled="loginForm.$invalid" ng-click="login(customer)">Login</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
</body>
</html>
